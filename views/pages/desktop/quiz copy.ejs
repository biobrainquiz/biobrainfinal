<!--- Professional Quiz-->
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>BioBrain | Quiz</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(135deg, #1e3c72, #2a5298);
}

/* Main Card */
.quiz-container {
  max-width: 850px;
  margin: 60px auto;
  background: #ffffff;
  padding: 35px;
  border-radius: 14px;
  box-shadow: 0 20px 50px rgba(0,0,0,0.2);
  position: relative;
}

/* Top Bar */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
}

.timer {
  font-size: 18px;
  font-weight: 600;
  color: #d63031;
}

.end-btn {
  background: #d63031;
  color: white;
  border: none;
  padding: 8px 18px;
  border-radius: 6px;
  cursor: pointer;
  transition: 0.3s;
}

.end-btn:hover {
  background: #b71c1c;
}

/* Question */
.question-number {
  font-weight: 600;
  margin-bottom: 10px;
  color: #666;
}

.question-text {
  font-size: 20px;
  margin-bottom: 25px;
}

/* Options */
.option {
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  padding: 12px 15px;
  margin-bottom: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.option:hover {
  border-color: #2a5298;
  background: #f0f6ff;
}

.option.selected {
  border-color: #2a5298;
  background: #dfe9ff;
}

/* Bottom Nav */
.bottom-nav {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
}

.nav-btn {
  background: #2a5298;
  color: white;
  border: none;
  padding: 10px 22px;
  border-radius: 6px;
  cursor: pointer;
  transition: 0.3s;
}

.nav-btn:hover {
  background: #1e3c72;
}
</style>
</head>

<body>

<div class="quiz-container">

  <div class="top-bar">
    <div class="timer" id="timer">Time Left: 10:00</div>
    <button class="end-btn" onclick="endQuiz()">End Quiz</button>
  </div>

  <div class="question-number" id="qNumber"></div>
  <div class="question-text" id="qText"></div>
  <div id="options"></div>

  <div class="bottom-nav">
    <button class="nav-btn" onclick="prevQuestion()">Previous</button>
    <button class="nav-btn" onclick="nextQuestion()">Next</button>
  </div>

</div>

<script>
let questions = <%- JSON.stringify(questions) %>;
let currentIndex = 0;
let userAnswers = new Array(questions.length).fill(null);
let timeLeft = 600; // 10 minutes

function renderQuestion() {

  console.log("Questions:", questions);
console.log("Current Index:", currentIndex);
console.log("Current Question:", questions[currentIndex])

  const q = questions[currentIndex];

  document.getElementById("qNumber").innerText =
    `Question ${currentIndex + 1} of ${questions.length}`;

  document.getElementById("qText").innerText = q.question;

  const optionsDiv = document.getElementById("options");
  optionsDiv.innerHTML = "";

  for (let i = 1; i <= 4; i++) {
    const option = document.createElement("div");
    option.classList.add("option");
    option.innerText = q["opt" + i];

    if (userAnswers[currentIndex] === i) {
      option.classList.add("selected");
    }

    option.onclick = () => selectAnswer(i);
    optionsDiv.appendChild(option);
  }
}

function selectAnswer(optionNumber) {
  userAnswers[currentIndex] = optionNumber;
  renderQuestion();
}

function nextQuestion() {
  if (currentIndex < questions.length - 1) {
    currentIndex++;
    renderQuestion();
  }
}

function prevQuestion() {
  if (currentIndex > 0) {
    currentIndex--;
    renderQuestion();
  }
}

function endQuiz() {
  if (!confirm("Are you sure you want to end the quiz?")) return;

  let score = 0;

  for (let i = 0; i < questions.length; i++) {
    if (userAnswers[i] === questions[i].answer) {
      score += questions[i].marks;
    }
  }

  alert(`Quiz Completed!\nYour Score: ${score}`);
  window.location.href = "/";
}

/* Timer */
function startTimer() {
  const timer = setInterval(() => {
    timeLeft--;

    const minutes = Math.floor(timeLeft / 60);
    const seconds = timeLeft % 60;

    document.getElementById("timer").innerText =
      `Time Left: ${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;

    if (timeLeft <= 0) {
      clearInterval(timer);
      endQuiz();
    }
  }, 1000);
}

renderQuestion();
startTimer();
</script>

</body>
</html>